    "def r_sum(x):\n",
    "    if x<0:\n",
    "        print(\"sum is 0\")\n",
    "    elif x==1:\n",
    "        return 1\n",
    "    else:\n",
    "        return x+r_sum(x-1)\n",
    "x=int(input(\"Enter the num  : \"))\n",
    "print(\"The sum of \",x,\"is \",r_sum(x))\n"
